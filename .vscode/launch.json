{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CatalogAPI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Services/Catalog/CatalogAPI/bin/Debug/net8.0/CatalogAPI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Services/Catalog/CatalogAPI",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
